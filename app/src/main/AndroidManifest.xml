<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uwaterloo.proxtimeity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/proxtimeity_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseTypeActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".CreateTimeActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".ChooseTypeActivity"
        />
        <activity android:name=".CreateLocationActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".ChooseTypeActivity"
        />
    </application>

</manifest>