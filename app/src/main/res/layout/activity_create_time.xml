<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uwaterloo.proxtimeity.CreateTimeActivity">

            <TextView
                android:id="@+id/timeSelected"
                android:layout_width="348dp"
                android:layout_height="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/selectTimeBtn"
                android:layout_width="346dp"
                android:layout_height="50dp"
                android:onClick="timePicker"
                android:text="Choose a Time"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/timeSelected" />

            <TextView
                android:id="@+id/dateSelected"
                android:layout_width="345dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@+id/selectTimeBtn"
                app:layout_constraintHorizontal_bias="0.521" />

            <Button
                android:id="@+id/selectDateBtn"
                android:layout_width="349dp"
                android:layout_height="51dp"
                android:onClick="datePicker"
                android:text="Choose a Date"
                android:layout_marginTop="-18dp"
                app:layout_constraintTop_toBottomOf="@+id/dateSelected"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="349dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Reminder Description"
                android:inputType="textPersonName"
                android:layout_marginTop="43dp"
                app:layout_constraintTop_toBottomOf="@+id/selectDateBtn"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.526" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="349dp"
                android:layout_height="77dp"
                android:text="Submit"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editDescription"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
