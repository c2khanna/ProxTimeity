<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.uwaterloo.proxtimeity.CreateLocationActivity">

    <RelativeLayout
        android:paddingLeft="4.0dp"
        android:paddingTop="5.0dp"
        android:paddingRight="4.0dp"
        android:paddingBottom="1.0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="32dp"
            android:text="Create a Location-Based Reminder"
            android:gravity="center"/>

        <EditText
            android:id="@+id/reminder_description"
            android:layout_below="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/location_text_prompt"/>

        <Spinner
            android:id="@+id/locations_spinner"
            android:layout_below="@+id/reminder_description"
            android:entries="@array/location_array"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="32dp"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/check_store_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locations_spinner"
            android:layout_marginBottom="32dp"
            android:text="@string/checkbox_string"/>

        <TextView
            android:id="@+id/info_text_remind"
            android:layout_below="@id/check_store_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:text="@string/remindMeBefore"/>

        <TextView
            android:id="@+id/timeSelected"
            android:layout_below="@+id/info_text_remind"
            android:text="default time value"
            android:layout_width="348dp"
            android:layout_height="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/selectTimeBtn"
            android:layout_below="@id/timeSelected"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:onClick="timePicker"
            android:text="Choose a Time"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/dateSelected"
            android:layout_below="@+id/selectTimeBtn"
            android:layout_width="345dp"
            android:text="default date value"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp" />

        <Button
            android:id="@+id/selectDateBtn"
            android:layout_below="@+id/dateSelected"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:onClick="datePicker"
            android:text="Choose a Date"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_below="@id/selectDateBtn"
            android:layout_height="75dip"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true"
            android:text="@string/save_location_reminder"
            android:onClick="saveLocationReminder"/>

    </RelativeLayout>
</ScrollView>
